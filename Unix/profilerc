# unix alias commands
alias ls="ls -h"
alias la="ls -Glah"
alias lss="ls -GlaSh"
alias lst="ls -Glath"
alias pd="pushd"
alias ppd="popd"
alias edit="vi"


# app alias commands (only make sence on a mac)
alias word="open /Applications/Microsoft\ Office\ 2011/Microsoft\ Word.app"
alias excel="open /Applications/Microsoft\ Office\ 2011/Microsoft\ Excel.app"
alias ppt="open /Applications/Microsoft\ Office\ 2011/Microsoft\ PowerPoint.app"
alias outlook="open /Applications/Microsoft\ Office\ 2011/Microsoft\ Outlook.app"
alias xcode="open /Developer/Applications/Xcode.app"
alias mockups="open /Applications/Balsamiq\ Mockups.app"
alias mm="open /Applications/FreeMind.app"
alias mou="open /Applications/Mou.app"

# git commands
alias gp="git push"
alias ga="git add"
alias gl="git pull"
alias gc="git commit"
alias gr="git remote"
alias gs="git status"
alias gmv="git mv"

# environment variable exports
export EDITOR=/usr/bin/vi
export PS1="\w> "
export PATH=/opt/local/bin:/opt/local/sbin:/Applications/CMake.app/Contents/bin:$PATH

#set shell command search to vi
set -o vi

#on mac OS, changes the terminal name to current working directory
export PROMPT_COMMAND='echo -ne "\033]0;${PWD}\007"'

